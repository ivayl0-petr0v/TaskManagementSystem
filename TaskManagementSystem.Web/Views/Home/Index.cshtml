@{
    ViewData["Title"] = "Home Page";
}

<section class="hero-section min-vh-100 d-flex align-items-center">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-6 hero-text-area">
                <h1 class="hero-title">
                    Organize your<br />projects in time.
                </h1>
                <p class="hero-subtitle">
                    Create a page where there is information about employees, tasks, and deadlines in one beautiful place.
                </p>
                <a asp-controller="Project" asp-action="Create" class="btn-hero-main">
                    Create project
                </a>
            </div>

            <div class="col-lg-6 d-none d-lg-block">
                <div class="hero-image-wrapper">
                    <img src="~/images/home-cards-visual.png" alt="Project Visualization" class="img-fluid floating-element" />
                </div>
            </div>

        </div>
    </div>
</section>