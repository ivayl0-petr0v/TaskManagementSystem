@model ProjectDeleteViewModel

@{
    ViewBag.Title = "Delete Project";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">

    <div class="card border-0 shadow-lg" style="max-width: 550px; width: 100%; border-radius: 20px; overflow: hidden;">

        <div class="py-3 text-center" style="background-color: #ff4d5e;">
            <span class="text-white fw-medium">Are you sure you want to delete this project?</span>
        </div>

        <div class="card-body p-5 text-center">

            <h3 class="fw-bold mb-3 text-dark">@Model.Title</h3>

            <p class="text-muted mb-5" style="line-height: 1.6;">
                @Model.Description
            </p>

            <div class="d-flex justify-content-center gap-3">

                <a asp-action="Details" asp-route-id="@Model.Id"
                   class="btn btn-light fw-bold py-2 px-4"
                   style="border-radius: 10px; background-color: #E9E9E9; min-width: 120px;">
                    Cancel
                </a>

                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit"
                            class="btn btn-dark fw-bold py-2 px-4"
                            style="border-radius: 10px; min-width: 120px;">
                        Delete
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>