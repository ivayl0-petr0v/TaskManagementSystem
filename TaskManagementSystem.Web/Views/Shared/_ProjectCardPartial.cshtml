@model ProjectAllViewModel

<div class="card h-100 border-0 shadow-lg p-3" style="border-radius: 20px;">

    <div class="mb-3">
        <span class="badge bg-light text-dark border fw-normal px-3 py-2 rounded-pill">
            @Model.Category
        </span>
    </div>

    <h5 class="fw-bold mb-2">@Model.Title</h5>

    <p class="text-muted small mb-4 text-truncate">
        @Model.Description
    </p>

    <div class="d-flex flex-column gap-2 mb-4">
        <div class="d-flex align-items-center text-dark small">
            <span class="material-symbols-outlined me-2 fs-5">person</span>
            <span>@Model.UserFullName</span>
        </div>

        <div class="d-flex align-items-center text-dark small">
            <span class="material-symbols-outlined me-2 fs-5">calendar_month</span>
            <span>@Model.DueDate</span>
        </div>

        <div class="d-flex align-items-center text-dark small">
            <span class="material-symbols-outlined me-2 fs-5">info</span>

            @if (Model.Status == "Completed")
            {
                <span class="text-success fw-bold">@Model.Status</span>
            }
            else if (Model.Status == "InProgress")
            {
                <span class="text-warning fw-bold">@Model.Status</span>
            }
            else
            {
                <span>@Model.Status</span>
            }
        </div>
    </div>

    <div class="mt-auto">
        <a asp-controller="Project"
           asp-action="Details"
           asp-route-id="@Model.Id"
           class="btn btn-dark w-100 py-2 rounded-3 fw-medium">
            Details
        </a>
    </div>
</div>